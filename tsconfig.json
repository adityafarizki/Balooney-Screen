{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "amd",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node",
    "strict": true,
    "alwaysStrict": true,
    "baseUrl": "./src/",
    "paths": {},
    "strictNullChecks": false,
    "downlevelIteration": true,
    "typeRoots": [
      "./node_modules/@types/",
      "./src/types/"
    ]
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "node_modules"
  ]
}